{
    "manifest_version": 3,
    "name": "Accessibility Tool",
    "version": "1.0",
    "description": "Extension qui propose des outils améliorant l'accesibilité",
    
    // API ? 
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "storage"
      ],

      "optional_permissions": [
        "topSites",
        "tabs"  
      ],
      "host_permissions": [
        "https://www.developer.chrome.com/*",
        "https://www.google.com/"
      ],
      "optional_host_permissions":[
        "https://*/*",
        "http://*/*"
      ],
    

    // gestionnaire d'évènements en arrière plan
    "background": {
        "service_worker": "background.js"
        
    },

    // icône de l'extension
    "icons": {
      "48": "icone.png"
    },

    // fenêtre popup et autres
    "action": {
        "default_icon": "icone.png",
        "default_title": "Inclusivity Tool",
        "default_popup": "popup/popup.html"

    }
}
  