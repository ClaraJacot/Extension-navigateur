{
    "manifest_version": 3,
    "name": "Accessibility Tool",
    "version": "1.0",
    "description": "Extension qui propose des outils améliorant l'accesibilité",
    
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "storage",
        "cookies",
        "tts"
      ],

      "optional_permissions": [
        "topSites",
        "tabs"  
      ],
      "host_permissions": [
        "https://www.developer.chrome.com/*",
        "https://www.google.com/",
        "https://*/*",
        "http://*/*"
      ],
      "optional_host_permissions":[
       
      ],

    "background": {
        "service_worker": "background.js"    
    },

    "content_scripts": [{
        "matches" : ["*://*/*"],
        "js": ["contentColor.js","contentbold.js","contentCursor.js"]
        }],
    

    "icons": {
      "16": "iconegouvernail16.png",
      "48": "iconegouvernail.png"
    },

    "web_accessible_resources": [
      {
      "resources" : ["popup/cursor_blue.png"],
      "matches": ["*://*/*"]
      }
    ],

    "action": {
        "default_icon": "iconegouvernail.png",
        "default_title": "Inclusivity Tool",
        "default_popup": "popup/popup.html"
    }

}
  