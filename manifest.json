{
    "manifest_version": 3,
    "name": "Accessibility Tool",
    "version": "1.0",
    "description": "Extension qui propose des outils améliorant l'accesibilité",
    
    // API ? 
    // "permissions" : [
    //     "",
    // ],

    // gestionnaire d'évènements en arrière plan
    // "background": {
    //     "service_worker": "background.js"
        
    // },

    // icône de l'extension
    "icons": {
      "48": "icone.png"
    },

    // fenêtre popup et autres
    "action": {
        "default_icon": "icone.png",
        "default_title": "Inclusivity Tool",
        "default_popup": "popup/popup.html"
    },
    
    // fonctionnalité gras
    "content_scripts": [
        {
          "js": [
            "bold-script.js"
          ],
          "matches": [
            "http://*/*",
            "https://*/*"
        ]
        }
      ]
    
  }
  